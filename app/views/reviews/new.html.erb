<h1>Thanks for adding a review to <%=@restaurant.name%></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, placeholder: 'Please write your content here'%>
  <%= f.input :rating, placeholder: 'Note' %>
  <%= f.button :submit, value: "Let's do it"%>
<% end %>
<p><%= link_to "Home", restaurants_path(@restaurant) %></p>
